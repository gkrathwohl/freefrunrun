<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="text-center">
        <h2>Appleton Farms Parkrun</h2>
        <h1><%= @place.ordinalize %> place!</h1>
      </div>
      <% if @already_claimed %>
        <h2>This place has already been claimed</h2>
        <%= link_to 'View Results', race_results_path(@existing_result.race.id) %>        
      <% else %>
        <%= render 'claim_form' %>
      <% end %>
    </div>
  </div>
</div>