<!DOCTYPE html>
<html>
  <head>
    <title>Freefunrun</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>

<p id="time-display">00:00.0</p>
<p id="place">Place: 1</p>

<div id="end-modal">
  <div class="end-button" id="save-button">Save Results</div>
  <div class="end-button" id="reset">Reset</div>
</div>

<div id="buttons">
  <div id="start-split-button">Start</div>
  <div id="stop-button">Stop</div>
</div>

<style>

  #end-modal {
    display: none;  /* later set to flex */
    z-index: 1;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    position: fixed;
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.8); /* Black w/ opacity */
    flex-direction: column;
    padding-top: 20%;
    padding-bottom: 20%;
  }

  .end-button {
    width: 60%;
    height: 30vh;
    background: white;
    margin: auto;
    font-size: 27pt;
    line-height: 30vh;
    text-align: center;
  }

  #buttons { 
    width: 100vw;
    height: 50vh;
    position: absolute;
    bottom: 0;
  }

  #save-button {
    background: green;
  }

  #reset {
    background: red;
  }

  body {
    margin: 0;
  }

  #time-display { 
    font-family: monospace;
    font-size: 17vw;
    text-align: center;
  }

  #start-split-button {
    background-color: green;
    line-height: 25vh;
    text-align: center;
    font-size: 45pt;
    height: 50%;
  }

  #stop-button {
    background-color: red;
    line-height: 25vh;
    text-align: center;
    font-size: 45pt;
    height: 50%;
  }
</style>

<script>

let raceId = <%= @race.id %>

let startTime = null;
let startSplitButton = document.getElementById("start-split-button");
let stopButton = document.getElementById("stop-button");
let saveButton = document.getElementById("save-button")
let placeDisplay = document.getElementById("place");
let timeDisplay = document.getElementById("time-display");
let interval = null;
let times = [];
let place = 1;

let beepSound = new Audio("data:audio/wav;base64,    ");


startSplitButton.addEventListener("touchstart", function(){
  if (interval){
    split();
  } else {
    startTimer();
  }
});

saveButton.addEventListener("click", function(){
  saveResults();
});

stopButton.addEventListener("click", function(){
  stopTimer();
});

function saveResults(){
  var url = '/submit_results';
  var data = {times: times, raceId: raceId};

  fetch(url, {
    method: 'POST', // or 'PUT'
    body: JSON.stringify(data), 
    headers: new Headers({
      'Content-Type': 'application/json'
    })
  }).then(res => res.json())
  .then(response => console.log('Success:', response));

}

function split() {
  flashScreen();
  let delta = Date.now() - startTime;
  times.push(delta);
  //beepSound.play();
  place += 1;
  placeDisplay.innerHTML = `Place: ${place}`;
}

function flashScreen(){
  let startColor = startSplitButton.style.backgroundColor
  startSplitButton.style.backgroundColor = "white";
  setTimeout(function(){
    startSplitButton.style.backgroundColor = startColor;
  }, 50);

}

function stopTimer() {
  clearInterval(interval);
  interval = null;
  document.getElementById("end-modal").style.display = "flex";
}

function startTimer() {
  startTime = Date.now();
  interval = setInterval(updateClock, 100);
  startSplitButton.style.backgroundColor = "orange";
  startSplitButton.innerText = "Split"
}

function updateClock(){
  let delta = Date.now() - startTime;

  let milliseconds = delta.toString().slice(-3,-2)
  let seconds = paddedInt(parseInt(delta / 1000) % 60);
  let minutes = paddedInt(parseInt(delta / (1000 * 60)) % 60);
  timeDisplay.innerHTML = `${minutes}:${seconds}.${milliseconds}`;
}

function trunc(i) {
  return i.toString()
}

function paddedInt(i){
  if(i < 10){
    return "0" + i.toString();
  } else {
    return i.toString();
  }
}




</script>

</body>
</html>